<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RuleBase>
    <Rule>
        <Action>
            <action_type>query</action_type>
            <query>update train set remaining_seats=remaining_seats+10 where train_id=?</query>
        </Action>
        <Event>
            <conditions>
                <condition>
                    <attribute>remaining_seats</attribute>
                    <operator>&lt;=</operator>
                    <value>15</value>
                </condition>
            </conditions>
            <event_type>select</event_type>
        </Event>
        <ruleId>1</ruleId>
        <rule_description>Adding extra compartments (seats) on demand</rule_description>
        <rule_status>Active</rule_status>
        <rule_type>deferred</rule_type>
        <table>train</table>
    </Rule>
    <Rule>
        <Action>
            <action_type>query</action_type>
            <query>select * from t2</query>
        </Action>
        <Event>
            <conditions>
                <condition>
                    <attribute>a1</attribute>
                    <operator>&gt;</operator>
                    <value>25</value>
                </condition>
                <conjunction>none</conjunction>
            </conditions>
            <event_type>update</event_type>
        </Event>
        <ruleId>542161</ruleId>
        <rule_description>rule2</rule_description>
        <rule_status>active</rule_status>
        <rule_type>immediate</rule_type>
        <table>t2</table>
    </Rule>
</RuleBase>
